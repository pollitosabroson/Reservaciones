<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.opt.exc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ListaVuelos"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.opt.exc.ListaVuelos" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.opt.exc.RegisterActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ListaTotal"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.opt.exc.ListaTotal" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.opt.exc.InfoActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>